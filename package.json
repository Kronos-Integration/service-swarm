{
  "name": "@kronos-integration/service-swarm",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "type": "module",
  "main": "./src/service-swarm.mjs",
  "exports": {
    ".": "./src/service-swarm.mjs"
  },
  "description": "manage a set of remote services",
  "keywords": [
    "kronos-service"
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "test": "ava --timeout 2m",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme ./src/service-swarm.mjs --section=API",
    "lint": "documentation lint ./src/service-swarm.mjs"
  },
  "dependencies": {
    "@kronos-integration/service": "^9.1.0",
    "hyperswarm": "^2.15.0",
    "model-attributes": "^4.1.6"
  },
  "devDependencies": {
    "ava": "^3.11.0",
    "c8": "^7.2.1",
    "documentation": "^13.0.2",
    "semantic-release": "^17.1.1"
  },
  "engines": {
    "node": ">=14.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Kronos-Integration/service-swarm.git"
  },
  "bugs": {
    "url": "https://github.com/Kronos-Integration/service-swarm/issues"
  },
  "homepage": "https://github.com/Kronos-Integration/service-swarm#readme",
  "template": {
    "inheritFrom": [
      "arlac77/template-github-action",
      "arlac77/template-kronos-component"
    ]
  }
}
