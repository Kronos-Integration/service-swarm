{
  "name": "@kronos-integration/service-swarm",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "exports": {
    ".": "./src/service-swarm.mjs"
  },
  "description": "manage a set of remote services",
  "keywords": [
    "kronos-service"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 2m tests/*.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m tests/*.mjs && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme ./src/service-swarm.mjs --section=API",
    "lint": "npm run lint:docs",
    "lint:docs": "documentation lint ./src/service-swarm.mjs"
  },
  "dependencies": {
    "@kronos-integration/endpoint": "^9.3.3",
    "@kronos-integration/service": "^10.0.7",
    "hyperswarm": "^2.15.2",
    "length-prefix-framed-stream": "^2.0.1",
    "model-attributes": "^4.1.8"
  },
  "devDependencies": {
    "ava": "^3.14.0",
    "c8": "^7.3.5",
    "documentation": "github:arlac77/documentation",
    "semantic-release": "^17.3.0"
  },
  "engines": {
    "node": ">=14.15.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Kronos-Integration/service-swarm.git"
  },
  "bugs": {
    "url": "https://github.com/Kronos-Integration/service-swarm/issues"
  },
  "homepage": "https://github.com/Kronos-Integration/service-swarm#readme",
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-kronos-component"
    ]
  }
}
